<% if object.errors.any? %>
  <div id="error_message" style="">
    <div class="title">
      This form contains <%= pluralize(object.errors.count, "error") %>
    </div>
    <div class="message">
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
